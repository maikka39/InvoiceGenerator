{
  "name": "invoicegenerater",
  "version": "0.0.1",
  "description": "A program to generate invoices from a template",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "build --dir",
    "dist": "build",
    "pack-win": "build --dir --win",
    "dist-win": "build --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maikka39/InvoiceGenerator.git"
  },
  "author": "Maik de Kruif",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maikka39/InvoiceGenerator/issues"
  },
  "homepage": "https://github.com/maikka39/InvoiceGenerator#readme",
  "devDependencies": {
    "electron": "^3.0.0",
    "electron-builder": "^20.39.0"
  },
  "build": {
    "appId": "dev.maik.invoicegenerater",
    "productName": "InvoiceGenerator",
    "directories": {
      "buildResources": "build",
      "output": "dist",
      "app": "./"
    },
    "win": {
      "target": [
        "zip"
      ]
    }
  },
  "dependencies": {
    "docxtemplater": "^3.9.7",
    "jszip": "^2.6.1"
  }
}
